<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:global="clr-namespace:Hawaii;assembly=Hawaii"
             xmlns:sceneBuilders="clr-namespace:Hawaii.Test.SceneBuilders"
             x:Class="Hawaii.Test.MainPage">
    <Grid BackgroundColor="DarkSlateGray">
        <global:SceneGraphicsView
            BackgroundColor="Magenta"
            x:TypeArguments="sceneBuilders:FeatureSceneBuilder"
            State="{Binding .}"
            WidthRequest="1400"
            HeightRequest="1000"
        />
    </Grid>
</ContentPage>
